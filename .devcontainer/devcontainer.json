{
  "name": "Presence DevContainer",
  "image": "mcr.microsoft.com/devcontainers/base",
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2.14.0": {},
    "ghcr.io/devcontainers-community/features/direnv:1": {}

  },

  "forwardPorts": [
    9443,
    8080, 3000
  ],

  "postCreateCommand": "source ./.devcontainer/post-create.sh",
  "customizations": {
    "vscode": {
      "extensions": ["aws-scripting-guy.cform"]
    }
  },
  "remoteUser": "vscode"
}
